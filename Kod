});
});

// Kod Ã§alÄ±ÅŸtÄ±rma fonksiyonu
function runCode() {
const code = editor.getValue();
const language = document.getElementById('languageSelector').value;

// Konsol temizleme
consoleHistory = [];
consoleOutput.innerHTML = '';

try {
if (language === 'htmlmixed') {
// HTML/CSS/JS kodu iÃ§in
outputFrame.innerHTML = code;

// HTML gÃ¶rÃ¼nÃ¼mÃ¼
htmlView.textContent = code;

// Konsol Ã§Ä±ktÄ±sÄ±nÄ± yakala
const originalConsoleLog = console.log;
console.log = function(...args) {
consoleHistory.push(args.join(' '));
originalConsoleLog.apply(console, args);
};

// Kod iÃ§indeki scri pt'leri Ã§alÄ±ÅŸtÄ±r
const scri pts = outputFrame.getElementsByTagName('scri pt');
for (let scri pt of scri pts) {
try {
eval(scri pt.innerHTML);
} catch (e) {
consoleHistory.push('Hata: ' + e.message);
}
}

// Konsol Ã§Ä±ktÄ±sÄ±nÄ± gÃ¶ster
consoleOutput.innerHTML = consoleHistory.map(msg = >
`< div style="padding: 5px 10px; border-bottom: 1px solid #444; color: #2ecc71;" >
> ${msg}< /div >`
).join('');

// Orijinal console.log'u geri yÃ¼kle
console.log = originalConsoleLog;

} else if (language === 'python') {
// Python benzeri Ã§Ä±ktÄ± (simÃ¼lasyon)
const pythonCode = code.toLowerCase();
if (pythonCode.includes('print')) {
const matches = code.match(/print\(["'](.+)["']\)/);
if (matches) {
outputFrame.innerHTML = `< pre style="color: white;" >${matches[1]}< /pre >`;
}
}
htmlView.textContent = "Python kodu: " + code;
consoleOutput.innerHTML = `< div style="padding: 10px; color: #3498
