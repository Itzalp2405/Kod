editor.setValue(initialCode);

// DeÄŸiÅŸkenler
const outputFrame = document.getElementById('output');
const consoleOutput = document.getElementById('console');
const htmlView = document.getElementById('htmlview');
let consoleHistory = [];

// Dil seÃ§ici
document.getElementById('languageSelector').addEventListener('change', function(e) {
const modeMap = {
'htmlmixed': 'htmlmixed',
'css': 'css',
'javascri pt': 'javascri pt',
'python': 'python'
};
editor.setOption('mode', modeMap[e.target.value]);
});

// Ã‡alÄ±ÅŸtÄ±r butonu
document.getElementById('runBtn').addEventListener('click', runCode);

// Temizle butonu
document.getElementById('clearBtn').addEventListener('click', function() {
if (confirm('TÃ¼m kodu temizlemek istediÄŸinize emin misiniz?')) {
editor.setValue('');
outputFrame.innerHTML = '';
consoleOutput.innerHTML = '';
htmlView.innerHTML = '';
consoleHistory = [];
}
});

// Kaydet butonu
document.getElementById('saveBtn').addEventListener('click', function() {
const code = editor.getValue();
const blob = new Blob([code], { type: 'text/plain' });
const url = URL.createObjectURL(blob);
const a = document.createElement('a');
a.href = url;
a.download = 'kodlab-kodum.txt';
document.body.appendChild(a);
a.click();
document.body.removeChild(a);
URL.revokeObjectURL(url);
alert('Kodunuz indirildi!');
});

// Tab geÃ§iÅŸleri
document.querySelectorAll('.tab').forEach(tab = > {
tab.addEventListener('click', function() {
const tabName = this.getAttribute('data-tab');

// TÃ¼m tab'larÄ± deaktif et
document.querySelectorAll('.tab').forEach(t = > t.classList.remove('active'));
document.querySelectorAll('.tab-content').forEach(c = > c.classList.remove('active'));

// SeÃ§ili tab'Ä± aktif et
this.classList.add('active');
document.getElementById(tabName).classList.add('active');
});
});

// Ã–rnek kod butonlarÄ±
document.querySelectorAll('.preset-btn').forEach(btn = > {
